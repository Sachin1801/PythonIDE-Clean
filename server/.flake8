[flake8]
max-line-length = 120
exclude =
    venv,
    .venv,
    __pycache__,
    data,
    migrations,
    *.pyc,
    .git

# Ignore codes that conflict with Black formatter
# E203: whitespace before ':' (Black formatting style)
# W503: line break before binary operator (Black prefers this)
# E501: line too long (handled by max-line-length)
ignore = E203,W503

# Show statistics
count = True
statistics = True

# Per-file ignores for specific patterns
per-file-ignores =
    __init__.py:F401
    */migrations/*.py:E402
